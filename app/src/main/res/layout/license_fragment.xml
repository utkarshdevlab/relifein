<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Text.Title"
            android:text="@string/license_app_title"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_app_licence"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_app_source"/>

        <View
            style="@style/Divider" />

        <TextView
            style="@style/Text.Title"
            android:text="@string/license_mpandroidCharts_title"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_mpandroidCharts_licence"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_mpandroidCharts_source"/>

        <View
            style="@style/Divider" />

        <TextView
            style="@style/Text.Title"
            android:text="@string/license_XmlWriter_title"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_XmlWriter_licence"/>

        <TextView
            style="@style/Text.Licence_Text"
            android:text="@string/license_XmlWriter_source"/>

        <View
            style="@style/Divider" />

        <TextView
            style="@style/Text.Title"
            android:text="@string/origin_icon"/>

    </LinearLayout>
</ScrollView>